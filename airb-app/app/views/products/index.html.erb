<p id="notice"><%= notice %></p>

<%= render 'searchbar/searchProducts' %>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product name</th>
      <th>Product model</th>
      <th>Serial number</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag(product.asset.thumb('92x92#').url, class: 'img-thumbnail'), product %></td>
        <td><%= product.product_name %></td>
        <td><%= product.product_model %></td>
        <td><%= product.serial_number %></td>
        <td>$<%= product.price %></td>
        <td><%= product.stock %></td>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Show', product %></button></td>
        <% if can? :update, @product %>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Edit', edit_product_path(product) %></button></td>
        <%end%>
        <% if can? :destroy, @product %>
        <td><button type="button" class="btn btn-lg-primary"><%= button_to 'Delete', product, method: :destroy, data: { confirm: 'Are you sure?' } %></button></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @product %>
<button type="button" class="btn btn-lg btn-default"><%= link_to 'New Product', new_product_path %></button>
<%end%>
