<p id="notice"><%= notice %></p>

<%= render 'searchbar/searchUsers' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration date</th>
      <th>Expiration date</th>
      <th>Personal number</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Address</th>
      <th>User role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.registration_date %></td>
        <td><%= user.expiration_date %></td>
        <td><%= user.personal_number %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.user_role %></td>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Show', user %></button></td>
        <% if can? :update, @user %>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <%end%>
        <% if can? :destroy, @user %>
        <td><button type="button" class="btn btn-lg-primary"><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @user %>
<button type="button" class="btn btn-lg btn-default"><%= link_to 'New User', new_user_path %></button>
<%end%>
