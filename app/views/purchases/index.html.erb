<p id="notice"><%= notice %></p>

<%= render 'searchbar/searchPurchases' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Product name</th>
      <th>Product model</th>
      <th>Price</th>
      <th>Purchase date</th>
      <th>Maintnance date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.customer_name %></td>
        <td><%= purchase.product_name %></td>
        <td><%= purchase.product_model %></td>
        <td><%= purchase.price %></td>
        <td><%= purchase.purchase_date %></td>
        <td><%= purchase.maintnance_date %></td>
        <% if can? :read, @purchases %>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Show', purchase %></button></td>
        <%end%>
        <% if can? :update, @purchase %>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Edit', edit_purchase_path(purchase) %></button></td>
        <%end%>
        <% if can? :destroy, @purchase %>
        <td><button type="button" class="btn btn-lg-primary"><%= button_to 'Delete', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @purchase %>
<button type="button" class="btn btn-lg btn-default"><%= link_to 'New Purchase', new_purchase_path %></button>
<%end%>
