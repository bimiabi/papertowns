<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_name %><br>
    <%= f.text_field :product_name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :product_model %><br>
    <%= f.text_field :product_model %>
  </div>
  <div class="field">
    <%= f.label :serial_number %><br>
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.number_field :stock %>
  </div>
  <div class="field">
    <%= f.label :upload_image %><br>
    <%= f.file_field :asset %>
    <% if f.object.asset_stored? %>
      <%= image_tag f.object.asset.thumb('140x140').url, class: 'img-thumbnail' %>
        <em>Current image</em>
      <%end%>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <button type="button" class="btn btn-lg-primary"><%= link_to 'Cancel', products_path %></button>
  </div>
<% end %>
