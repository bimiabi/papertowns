<p id="notice"><%= notice %></p>

<%= render 'searchbar/searchAppointments' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Technician Name</th>
      <th>Phone Number</th>
      <th>Appointment type</th>
      <th>Address</th>
      <th>Product Model</th>
      <th>Appointment Date</th>
      <th>Appointment Note</th>
      <th>Appointment Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.customer_name %></td>
        <td><%= appointment.technician_name %></td>
        <td><%= appointment.phone_number %></td>
        <td><%= appointment.appointment_type %></td>
        <td><%= appointment.address %></td>
        <td><%= appointment.product_model %></td>
        <td><%= appointment.appointment_date %></td>
        <td><%= appointment.appointment_note %></td>
        <td><%= "fix this status" %></td>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'View', appointment %></button></td>
          <% if can? :update, @appointment %>
        <td><button type="button" class="btn btn-lg-primary"><%= link_to 'Edit', edit_appointment_path(appointment) %></button></td>
          <%end%>
          <% if can? :destroy, @appointment %>
        <td><button type="button" class="btn btn-lg-primary"><%= button_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @appointment %>
<button type="button" class="btn btn-lg btn-default"><%= link_to 'New Appointment', new_appointment_path %></button>
<%end%>
